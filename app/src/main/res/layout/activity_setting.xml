<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@drawable/just">

        <LinearLayout
            android:id="@+id/ImageLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/dateMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ffff"
                android:textSize="30sp" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ImageLinearLayout"
            android:layout_margin="20dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColorHint="#ffff">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/Name"
                    android:singleLine="true"
                    android:textColor="#d3d3d3"
                    android:textColorHint="@color/colorPrimary" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/bodyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleLayout"
                android:layout_margin="10dp"
                android:textColorHint="#ffff">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/input_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="메모에 들어갈 내용을 적어주세요"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:scrollHorizontally="false"
                    android:singleLine="true"
                    android:textColor="#d3d3d3" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/belowMemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/memo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/box"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp">

                <ImageButton
                    android:id="@+id/dateImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_date_range_black_24dp"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dateImg"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:hint="날짜를 입력해주세요"
                    android:textColor="#d3d3d3"
                    android:textColorHint="#ffff" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp">

                <ImageButton
                    android:id="@+id/dateImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_access_time_black_24dp"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/textTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dateImg"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:hint="시간을 입력헤주세요"
                    android:textColor="#d3d3d3"
                    android:textColorHint="#ffff" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/belowMemo"
            android:layout_margin="20dp"
            android:background="#d5efefef"
            android:text="저장"
            android:textColorHint="#ffff" />
    </RelativeLayout>
</layout>